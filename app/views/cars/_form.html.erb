<%= form_for(@car) do |f| %>

  <div class="row">
    <div class= "medium-5 columns">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="row">
    <div class="medium-5 columns">
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </div>
  </div>

  <div class="action">
    <%= f.submit %>
  </div>
<% end %>
