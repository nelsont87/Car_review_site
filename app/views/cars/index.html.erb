<h1>Cars</h1>

<div class="row">
  <div class="small-2 large-4 columns">Car Name</div>
  <div class="small-4 large-4 columns">Car Description</div>
  <div class="small-6 large-4 columns"></div>
</div>


<div id="car">
  <% @cars.each do |vehicle| %>
    <ul>
      <div class="row">
        <div class="small-2 large-4 columns"><li><%= vehicle.name %></li></div>
        <div class="small-4 large-4 columns"><li><%= vehicle.description %></li></div>
        <div class="small-6 large-4 columns"><li><%= link_to 'Show', vehicle %></li></div>
      </div>
    </ul>
  <% end %>
</div>

<%= link_to 'New car', new_car_path %>
